<%- include('./partials/header') %>
    <div class="w-full min-h-screen flex flex-col md:flex-row items-start px-5 md:px-20 py-10 md:py-20 gap-5 md:gap-10">
        <!-- Product Cards Container -->
         <% if(products.length > 0) {%>
        <div class="w-full md:w-[30%] grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1 gap-5">
            <% products.forEach(product=> { %>
                <!-- Product Card -->
                <div class="rounded-md overflow-hidden shadow-md">
                    <!-- Product Image -->
                    <div class="w-full h-56 flex justify-center items-center sm:h-64 bg-[<%= product.bgcolor %>] p-5">
                        <img src="<%= product.image %>" alt="<%= product.name %>" class=" h-full object-cover" />
                    </div>
                    <!-- Product Details -->
                    <div class="w-full flex justify-between px-3 py-2 md:px-5 md:py-4 bg-[<%= product.panelcolor %>]">
                        <h3 class="text-xl sm:text-2xl font-bold text-[<%= product.textcolor %>]">
                            <%= product.name %>
                        </h3>
                        <!-- Quantity Control -->
                        <div class="flex items-center gap-2">
                            <a href="/cart/increment/<%= product._id %>">
                                <i
                                    class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line cursor-pointer"></i>
                            </a>
                            <div class="px-2 py-1 rounded-md bg-white text-black">
                                <%= product.quantity %>
                            </div>
                            <a href="/cart/decrement/<%= product._id %>">
                                <i
                                    class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line cursor-pointer"></i>
                            </a>
                        </div>
                    </div>
                    <!-- Product Total -->
                    <div class="flex items-center justify-between px-3 py-2 md:px-5 md:py-3 bg-gray-100">
                        <h4 class="text-md sm:text-lg font-semibold">Net Total</h4>
                        <h2 class="text-md sm:text-lg font-semibold">₹ <%= product.price * product.quantity %>
                        </h2>
                    </div>
                </div>
                <% }) %>
        </div>

        <!-- Price Breakdown Section -->
        <div class="w-full md:w-[70%] bg-white rounded-lg p-5 shadow-lg">
            <h3 class="text-lg md:text-xl font-bold">Price Breakdown</h3>
            <div class="px-5 mt-3 space-y-4">
                <!-- Total MRP -->
                <div class="flex justify-between">
                    <h4 class="w-1/2 md:w-1/3 font-medium">Total MRP</h4>
                    <h4>₹ <%= totalMRP %>
                    </h4>
                </div>
                <!-- Discount -->
                <div class="flex justify-between">
                    <h4 class="w-1/2 md:w-1/3 font-medium">Discount on MRP</h4>
                    <h4 class="text-red-500">- ₹ <%= discount %>
                    </h4>
                </div>
                <!-- Platform Fee -->
                <div class="flex justify-between">
                    <h4 class="w-1/2 md:w-1/3 font-medium">Platform Fee</h4>
                    <h4>₹ <%= platformFee %>
                    </h4>
                </div>
                <!-- Shipping Fee -->
                <div class="flex justify-between">
                    <h4 class="w-1/2 md:w-1/3 font-medium">Shipping Fee</h4>
                    <h4>
                        <%= shippingFee===0 ? "FREE" : "₹ " + shippingFee %>
                    </h4>
                </div>
            </div>
            <!-- Divider -->
            <div class="w-full h-[1px] bg-gray-300 my-6"></div>
            <!-- Total Amount -->
            <div class="flex justify-between items-center">
                <h3 class="w-1/2 md:w-1/3 text-lg md:text-xl font-semibold">Total Amount</h3>
                <h3 class="font-semibold text-lg md:text-xl text-green-600">₹ <%= netTotal %>
                </h3>
            </div>
            <!-- Checkout Form (Placeholder) -->
            <form action="" class="mt-5">
                <button
                    class="px-6 py-2 md:px-8 md:py-3 bg-green-500 text-white font-semibold rounded-md shadow hover:bg-green-600 transition">Proceed
                    to Checkout</button>
            </form>
        </div>

        <% }else{ %>
            <div class="w-full text-xl text-neutral-500 flex justify-center items-center">
                <h1>No products in cart.</h1>
            </div>
            <% } %>
    </div>
    <%- include('./partials/footer') %>